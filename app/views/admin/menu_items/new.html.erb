<h1>New Menu Item</h1>
<%= nested_form_for([:admin, @menu_item]) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-group">
    <%= f.label :vegetarian %>
    <%= f.check_box :vegetarian %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>

  <p><%= f.link_to_add('Add ingredients', :ingredients)%></p>
  <%= f.fields_for(:ingredients) do |ingredient_form| %>
    <div class="form-group">
      <%= ingredient_form.text_field(:name, placeholder: 'Name') %>
    </div>
    <div class="form-group">
      <%= ingredient_form.number_field(:calories, placeholder: 'Calories') %>
    </div>
    <p><%= ingredient_form.link_to_remove('Remove ingredient') %></p>
  <% end %>

  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>
